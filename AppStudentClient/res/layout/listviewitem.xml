<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date_listviewitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_subject"
            android:gravity="center"
            android:paddingTop="@dimen/margin_size"
            android:paddingBottom="@dimen/margin_size"
            android:paddingRight="@dimen/margin_size"
            android:text="2015年2月13日"
            android:textColor="@color/grey_white"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkbox_choice"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            style="@style/MyCheckboxStyle"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date_listviewitem"
            android:layout_marginLeft="@dimen/margin_size"
            android:layout_marginRight="16dp"
            android:scaleType="fitStart"
            android:layout_toRightOf="@id/checkbox_choice"
            android:src="@drawable/subject" />

              <!--  <TextView
                    android:id="@+id/tv_importance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_subject"
                    android:padding="@dimen/margin_size"
                    android:text="重要度:" />-->
        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_subject"
            android:layout_alignLeft="@id/iv_subject"
            android:maxEms="12"
            android:paddingTop="@dimen/margin_size"
            android:paddingBottom="@dimen/margin_size"
            android:paddingRight="@dimen/margin_size"
            android:singleLine="true"
            android:textColor="@color/grey_white"
            android:text="梅村中学高一数学期末考试"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/ratingbar_listviewitem"
            style="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:isIndicator="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />


        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/ratingbar_listviewitem"
            android:layout_alignRight="@id/iv_subject"
            android:src="@drawable/icon_rightbottom"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_subject"
            android:textColor="#157efb"
            android:padding="@dimen/margin_size"
            android:layout_marginRight="6dp"
            android:text="难度"/>

    </RelativeLayout>
</RelativeLayout>
