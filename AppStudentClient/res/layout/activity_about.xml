<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.fclassroom.activity.AboutActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/linear_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/listviewitem_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="功能介绍"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/listviewitem_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户反馈"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/listviewitem_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="版本更新"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/icon_right" />
    </LinearLayout>
</LinearLayout>
