<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#ffffff"/>
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <stroke android:width="1dp" android:color="#00a37c"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <corners android:radius="3dp"/>
            <solid android:color="#ffffff"/>
            <padding android:bottom="5dp" android:left="15dp" android:right="10dp" android:top="5dp" />
            <stroke android:width="1dp" android:color="#d9e4e0"/>
        </shape>
    </item>
</selector>